

{
    "name":"Atcoder Performance Colorizer",
    "description": "chrome extension for atcoder",
    "version":"0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "./scripts/service-worker.js"
    },
    "action": {
        "default_popup":"./html/popup.html",
        "defautl_icons":{
            "16": "./assets/images/shiba_icon.png",
            "48": "./assets/images/shiba_icon.png",
           "128": "./assets/images/shiba_icon.png" 
        }
    },
    "options_page":"./html/options.html",
    "permissions":[
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions":[
        "https://atcoder.jp/*/history"
    ],
    "icons": { 
        "16":  "./assets/images/shiba_icon.png",
        "48":  "./assets/images/shiba_icon.png",
       "128":  "./assets/images/shiba_icon.png"
    }
}