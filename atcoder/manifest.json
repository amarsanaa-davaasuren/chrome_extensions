

{
    "name":"Atcoder Performance Colorizer",
    "description": "chrome extension for atcoder",
    "version":"0.9.3",
    "manifest_version": 3,
    "background": {
        "service_worker": "./scripts/service-worker.js"
    },
    "action": {
        "default_popup":"./html/popup.html"
    },
    "permissions":[
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions":[
        "https://atcoder.jp/*/history"
    ],
    "icons": { 
        "16":  "./assets/images/shiba_icon_16.png",
        "48":  "./assets/images/shiba_icon_48.png",
        "128":   "./assets/images/shiba_icon_128.png"
    }
}