

{
    "manifest_version" : 3,
    "name":"Atcoder Performance Colorizer",
    "version":"0.1",
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts":[
        {
            "matches":["https://atcoder.jp/users/*/history"],
            "js": ["performance_visualizer.js"]
        },
        {
            "matches":[
                "https://atcoder.jp/*/*/standings"
            ],
            "js": ["standing_editor.js"]
        }
    ],
    "action": { },
    "icons": { "16": "shiba_icon.png",
        "48": "shiba_icon.png",
       "128": "shiba_icon.png" }
}